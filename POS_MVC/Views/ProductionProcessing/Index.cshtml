<script id="templateExpenseModalAdd" type="text/html">
    <table class="table table-bordered table-striped table-hover" id="ExpenseTableModal">
        <thead>
        <th> </th>
        <th>Expense</th>
        <th>Rate</th>
        <th>Qty</th>
        <th>Total Expense</th>
        <th>Action </th>
        </thead>
        <tbody>
            {{#ExpenseSearchAdd}}
            <tr>
                <td>{{countAddedExpenseCount}}</td>
                <td>{{Item}}</td>
                <td> {{ExpenseRate}}</td>
                <td> {{ExpenseAmount}}</td>
                <td> {{TotalAmount}}</td>
                <td>
                    <a class="btn btn-danger" onclick="OnDeleteExpense('{{countAddedExpenseCount}}')"><i class="fa fa-trash-o"></i></a>
                </td>
            </tr>
            {{/ExpenseSearchAdd}}
        </tbody>
    </table>
</script>
<script id="templateStockOutProductShow" type="text/html">
    <table class="table table-bordered table-striped table-hover" id="StockOutProductTableModal">
        <thead>
        <th>InvoiceNo </th>
        <th>Product</th>
        <th>Brand</th>
        <th>API</th>
        <th>Size</th>
        <th>Qty</th>
        <th>Rate</th>
        <th>Amount</th>
        <th>Godown</th>
        </thead>
        <tbody>
            {{#StockOutSearchAdded}}
            <tr>
                <td>{{InvoiceNo}}</td>
                <td>{{Product.ProductName}}</td>
                <td>{{BrandName}}</td>
                <td>{{API.APIName}}</td>
                <td>{{SizeName}}</td>
                <td>{{BaleQty}}</td>
                <td>{{Rate}}</td>
                <td>{{StockOutPrice}}</td>
                <td>{{WareHouse.WarehouseName}}</td>
            </tr>
            {{/StockOutSearchAdded}}
        </tbody>
    </table>
</script>
<script>
    function calculateRow(row) {
        var price = +row.find('input[name^="price"]').val();
    }

    function calculateGrandTotal() {
        var grandTotal = 0;
        $("table.order-list").find('input[name^="price"]').each(function () {
            grandTotal += +$(this).val();
        });
        $("#grandtotal").text(grandTotal.toFixed(2));
    }

    $(document).ready(function () {
        var now = new Date();
        var day = ("0" + now.getDate()).slice(-2);
        var month = ("0" + (now.getMonth() + 1)).slice(-2);
        var today = now.getFullYear() + "-" + (month) + "-" + (day);
        $('#txtDate').val(today);

        LoadInvoiceNo("txtPoNo");
        LoadAllStockOutChallan();
        LoadAllProduct('ddlItem');
        LoadAllSize("ddlSize");
        LoadAllBrand("ddlBrand");
        LoadAllAPI("ddlAPI");
        
    });
    function LoadStockOutProductList() {
        $('#myModal').modal('toggle');
        var invoiceNo = $("#ddlStockOutInvoice option:selected").text();
        LoadStockOutByInvoice(invoiceNo);
    }
</script>
