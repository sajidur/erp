
<div class="row">
    <label>Stock In to Production</label>
    <div class="col-md-12">
        <div class="card">
            <div class="row">
                <div class="col-lg-12">
                    <div class="well bs-component">
                        <form class="form-horizontal">
                            <fieldset>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        Invoice No:
                                    </label>
                                    <div class="col-md-2">
                                        <input type="text" value="001" readonly id="txtPoNo" name="txtPoNo" class="form-control" style="width:200px" />
                                    </div>
                                    <div class="col-md-2"></div>
                                    <label class="col-md-2 control-label">
                                        Stock out InvoiceNo:
                                    </label>
                                    <div class="col-md-3">
                                        <select class="form-control" id="ddlStockOutInvoice" name="ddlStockOutInvoice" onchange="LoadStockOutProductList()" style="width:200px"></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        Notes:
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" id="txtDescriptions" name="txtDescriptions" class="form-control" style="width:200px" />
                                    </div>
                                    <label class="col-md-2 control-label">
                                        Date:
                                    </label>
                                    <div class="col-md-3">
                                        <input type="date" id="txtDate" name="txtDate" class="form-control" style="width:200px; height:40px " />
                                    </div>
                                </div>
                                <div class="ibox-content" id="divInfo">
                                    <div class="form-group">
                                        <div class="col-md-12 table-responsive" id="div-productGroup">
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>

                    <div>
                        <table id="myTable" class="table order-list">
                            <thead>
                            <th>Item</th>
                            <th>Brand</th>
                            <th>API</th>
                            <th>Size</th>
                            <th>Qty</th>
                            <th>Rate</th>
                            <th>Godown</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <select id="ddlItem" class="form-control">
                                            <option value="0">Select</option>
                                        </select>
                                    </td>
                                    <td>
                                        <select id="ddlBrand" class="form-control">
                                            <option value="0">Select</option>
                                        </select>
                                    </td>
                                    <td class="col-sm-2">
                                        <select id="ddlAPI" class="form-control">
                                            <option value="0">Select</option>
                                        </select>
                                    </td>
                                    <td>
                                        <select id="ddlSize" class="form-control">
                                            <option value="0">Select</option>
                                        </select>
                                    </td>
                                    <td>
                                        <input type="text" name="txtBaleQty" id="txtBaleQty" class="form-control" />
                                    </td>
                                    <td>
                                        <input type="text" name="txtRate" id="txtRate" class="form-control" />
                                    </td>
                                    <td>
                                        <select class="form-control" id="ddlWareHouse" name="ddlWareHouse">
                                            @foreach (var item in Model)
                                            {
                                                <option value=@item.Id>@item.WareHouseName</option>
                                            }
                                        </select>
                                    </td>
                                    <td class="col-sm-1">
                                        <input type="button" class="btn btn-primary " id="btnAdd" name="btnAdd" value="Add" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div id="myModal" class="modal fade" role="dialog">
                            <div class="modal-dialog modal-lg">
                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-body">
                                        <div>
                                            <div class="ibox-content" id="divInfo2">
                                                <br /><br />
                                                <div class="form-group">
                                                    <div class="col-md-12 table-responsive" id="div-StockOutModal">
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="ibox-content">
                            <div class="form-group">
                                <h4>Added Product</h4>
                                <div class="col-md-12 table-responsive" id="div-product-added">

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <h4>Other Expense</h4>
                            <table id="myTable" class="table order-list">
                                <thead>
                                    <tr>
                                        <td>Expense Head</td>
                                        <td>Qty</td>
                                        <td>Rate</td>
                                        <td>Total Expense </td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="col-sm-2">
                                            <select id="ddlExpenseHead" class="form-control" style="height:35px">
                                                <option value="Other">Others</option>
                                            </select>
                                        </td>
                                        <td class="col-sm-1">
                                            <input type="number" name="txtExpenseAmount" id="txtExpenseAmount" class="form-control" style="height:35px" />
                                        </td>
                                        <td class="col-sm-1">
                                            <input type="number" name="txtExpenseRate" id="txtExpenseRate" class="form-control" style="height:35px" />
                                        </td>
                                        <td class="col-sm-1">
                                            <input type="number" readonly name="txtExpenseTotalAmount" id="txtExpenseTotalAmount" class="form-control" style="height:35px" />
                                        </td>
                                        <td class="col-sm-1">
                                            <input type="button" class="btn btn-primary" id="btnAddExpense" value="ADD" />
                                        </td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                </tfoot>
                            </table>
                        </div>
                        <div class="ibox-content" id="divExpenseInfo">
                            <div class="form-group">
                                <h4>Added Expense</h4>
                                <div class="col-md-12 table-responsive" id="div-expense-add">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-8">
                            </div>
                            <div class="col-md-4">

                                <p>Total Expense Amount:<label id="lblTotalExpenseAmount">0</label></p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">
                                Discount:
                            </label>
                            <div class="col-md-4">
                                <input type="number" id="txtDiscount" name="txtDiscount" value="0" class="form-control" style="width:200px; height:35px" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-8">
                            </div>
                            <div class="col-md-4">

                                <h5><b>Grand Total:</b><label id="lblGrandTotal">0</label></h5>
                            </div>
                        </div>

                    </div>
                    <div class="form-actions">
                        <div class="col-md-12">
                            <button class="btn btn-w-m btn-info" data-style="expand-left" id="btnSave" type="button" onclick="SaveStockIn()"><i class="fa fa-save"></i>&nbsp; Save</button>
                            <button class="btn btn-w-m btn-success" type="button" id="btnReset" onclick="ResetForm()"><i class="fa fa-refresh"></i>&nbsp;Reset</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
