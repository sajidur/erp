
@model RexERP_MVC.Models.SalaryItemNew
@{
    ViewBag.Title = "Salary Item";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="row">
                <div class="col-lg-12">
                    <div class="well bs-component">
                        <form class="form-horizontal">
                            <fieldset>
                                @Html.HiddenFor(m => m.id)
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        Salary ItemName:
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" id="txtSalaryItemName" name="txtSalaryItemName" class="form-control" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        Amount:
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" id="txtAmount" name="txtAmount" value="0" class="form-control" />
                                    </div>
                                    <label>|OR|</label>
                                    <label class="col-md-2 control-label">
                                        Percentage:
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" id="txtPercentage" name="txtPercentage" value="0" class="form-control" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        Description:
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" id="txtDescription" name="txtDescription" class="form-control" />
                                    </div>
                                </div>

                                <fieldset>
                                    <div class="form-actions">
                                        <div class="col-md-12">
                                            <button class="btn btn-w-m btn-info" data-style="expand-left" id="btnAdd" type="button" onclick="Add()"><i class="fa fa-save"></i>&nbsp; Add</button>
                                        </div>
                                    </div>
                                </fieldset>

                                <div class="ibox-title">
                                    @*<h5>Color List</h5>*@
                                </div>
                                <br />
                                <br />
                                <div class="ibox-content" id="divInfo">
                                    <div class="form-group">
                                        <div class="col-md-12 table-responsive" id="div-productGroup">
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
                <div class="col-lg-4 col-lg-offset-1">
                    <form class="bs-component">

                        <fieldset>
                            <script id="templateProductGroupModal" type="text/html">
                                <table class="table table-bordered table-striped table-hover" id="productGroupTableModal">
                                    <thead>
                                    <th>ID</th>
                                    <th>Salary Item Name</th>
                                    <th>Amount</th>
                                    <th>Percentage</th>
                                    <th>Action</th>
                                    </thead>
                                    <tbody>
                                        {{#ProductGroupSearch}}
                                        <tr>
                                            <td> {{id}}</td>
                                            <td> {{SalaryItemName}}</td>
                                            <td> {{Amount}}</td>
                                            <td> {{Percentage}}</td>
                                            <td class="action-sm">
                                                <a class="btn btn-primary btn-xs" onclick="LoadForEdit('{{Id}}')"><i class="fa fa-edit"></i> Select</a>
                                            </td>
                                        </tr>

                                        {{/ProductGroupSearch}}
                                    </tbody>
                                </table>
                            </script>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/app/SalaryItemNew.js"></script>










